<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bloggies"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/openTwitterButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="14dp"
        android:onClick="openTwitterActivity"
        android:text="connexion via Twitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.372"
        tools:layout_editor_absoluteX="14dp" />

    <Button
        android:id="@+id/openFacebookButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="14dp"
        android:onClick="openFacebookActivity"
        android:text="connexion via Facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openTwitterButton"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="14dp" />

    <Button
        android:id="@+id/openBlogButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="14dp"
        android:onClick="openBlogActivity"
        android:text="CrÃ©ation d'un compte Bloggies"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openFacebookButton"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="28dp" />


</androidx.constraintlayout.widget.ConstraintLayout>